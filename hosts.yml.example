.mysql: &mysql
  mysql_host: 127.0.0.1
  mysql_user: user
  mysql_pass: pass

.magento2-istall-settings: &magento2-istall-settings
  admin-firstname: John
  admin-lastname: Doe
  admin-email: john.doe@gmail.com
  admin-user: admin
  backend-frontname: admin
  language: en_US
  currency: USD
  timezone: America/Chicago
  use-rewrites: 1

swissupdemo.com:
  host: swissupdemo.com
  user: ec2-user
  port: 22
  identityFile: ~/.ssh/key.pem
  forwardAgent: true
  multiplexing: true
  stage: production
  deploy_path: /var/www/html
  <<: *mysql
  <<: *magento2-istall-settings
  base_url: http://{{hostname}}/releases/{{release}}

swissupdemo.com/test:
  host: swissupdemo.com
  user: ec2-user
  port: 22
  identityFile: ~/.ssh/magentodemoswissuplabs.pem
  deploy_path: /var/www/html/test
  forwardAgent: true
  multiplexing: true
  stage: staging
  <<: *mysql
  <<: *magento2-istall-settings
  base_url: http://{{hostname}}/current
  add_sample_data: true